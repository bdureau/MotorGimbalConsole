<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".telemetry.TelemetryStatusFragment.GimbalMpFlightFragment">


    <GridLayout
        android:columnCount="5"
        android:rowCount="9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">


        <TextView
            android:id="@+id/textViewlblCurrentPhase"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/current_phase"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/altitude"
            android:id="@+id/textViewlblAltitude"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_time"
            android:id="@+id/textViewlblEventTime"
            android:layout_row="2"
            android:layout_column="4"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lift_off"
            android:id="@+id/textViewlblLiftoff"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxLiftoff"
            android:checked="false"
            android:layout_row="3"
            android:layout_column="1"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textViewLiftoffAltitude"
            android:layout_row="3"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textViewLiftoffTime"
            android:layout_row="3"
            android:layout_column="4"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apogee_drogue"
            android:id="@+id/textViewlblApogee"
            android:layout_row="4"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxApogee"
            android:checked="false"
            android:layout_row="4"
            android:layout_column="1"
            style="@style/Base.DialogWindowTitle.AppCompat"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textViewApogeeAltitude"
            android:layout_row="4"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textViewApogeeTime"
            android:layout_row="4"
            android:layout_column="4"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_chute"
            android:id="@+id/textViewlblMainChute"
            android:layout_row="5"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMainchute"
            android:checked="false"
            android:layout_row="5"
            android:layout_column="1"
            style="@style/Base.DialogWindowTitle.AppCompat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textViewMainChuteAltitude"
            android:layout_row="5"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textViewMainChuteTime"
            android:layout_gravity="right"
            android:layout_row="5"
            android:layout_column="4"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landed"
            android:id="@+id/textViewlblLanded"
            android:layout_row="6"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxLanded"
            android:checked="false"
            android:layout_row="6"
            android:layout_column="1"
            style="@style/Base.DialogWindowTitle.AppCompat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/textViewLandedAltitude"
            android:layout_row="6"
            android:layout_column="2"
            android:textIsSelectable="false"
            android:text=""
            android:singleLine="true"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_gravity="right"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/textViewLandedTime"
            android:layout_row="6"
            android:layout_column="4"
            android:textIsSelectable="false"
            android:layout_gravity="right"
            android:text=""
            android:singleLine="true"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_speed"
            android:id="@+id/textViewlblMaxSpeed"
            android:layout_row="7"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCurrentMaxSpeed"
            android:layout_row="7"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"

            android:id="@+id/textViewMaxSpeedTime"
            android:layout_row="7"
            android:layout_column="4"
            android:layout_gravity="right"
            android:textIsSelectable="false"
            android:singleLine="true"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_altitude"
            android:id="@+id/textViewlblCurrentAltitude"
            android:layout_row="8"
            android:layout_column="0"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            android:id="@+id/textViewCurrentAltitude"
            android:layout_row="8"
            android:layout_column="2"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="13sp"/>

    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gridLayout">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/telemetryChartView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp" />
    </FrameLayout>


</RelativeLayout>